<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.curiosity.blog.mapper.UserMapper">
    <insert id="insert" parameterType="User">
   insert  into USER(name,account_id,token,GMT_CREATE,GMT_MODIFIED,AVATAR_URL)values(#{name},#{accountId},#{token},#{gmtCreate},#{gmtModify},#{avatorUrl});
  </insert>
    <select id="findByToken" parameterType="string" resultType="User">
    select * from USER where TOKEN=#{token};
  </select>

    <select id="findById" parameterType="int" resultType="User">
    select * from USER where ID=#{creator};
  </select>
</mapper>